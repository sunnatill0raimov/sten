# STEN Backend Security Configuration
# Copy this file to .env and fill with your secure values

# Server-side encryption key (64 hex characters = 32 bytes)
# Generate with: openssl rand -hex 32
STEN_ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Key derivation secret (128 hex characters = 64 bytes)
# Generate with: openssl rand -hex 64
STEN_KEY_DERIVATION_SECRET=your_128_character_hex_secret_here

# Encryption algorithm (recommended: aes-256-cbc)
STEN_ALGORITHM=aes-256-cbc

# Database configuration (existing)
MONGODB_URI=mongodb://localhost:27017/sten
PORT=3000

# Node environment
NODE_ENV=development

# Security settings
# Optional: Rate limiting for decryption attempts
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_ATTEMPTS=10

# Optional: Logging level
LOG_LEVEL=info
